- @page_title = "Support - Report a problem"

%main#content.container{role:'main'}
  .grid-row
    .column-full
      %h1.heading-large Report a problem
      - if @support.errors.any?
        = render partial: "layouts/errors", locals: { object: @support }

      = form_for @support, url: support_problem_path  do |f|
        = f.hidden_field :subject, value: "[Problem]"
        = f.text_area :message, rows: 10, required:  true
        = f.text_field :name, required: true
        = f.email_field :email, required: true
        = f.submit "Submit", class: "button"
