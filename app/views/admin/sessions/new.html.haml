- @page_title = 'Sign in | Admin'

%main#content.container{role:'main'}
  .grid-row
    .column-full
      - if flash[:alert].present?
        .error-summary= flash[:alert]
      %h1.heading-large Sign in
      = form_tag admin_sessions_path do
        .form-group
          = label_tag :email, 'E-Mail', class: "form-label"
          = text_field_tag :email, params[:email], autofocus: true, class: "form-control"
        .form-group
          = label_tag :password, 'Password', class: "form-label"
          = password_field_tag :password, nil, class: "form-control"
        .form-group
          = button_tag 'Continue', class: 'button'

        = link_to 'Forgotten password', new_admin_password_reset_path
