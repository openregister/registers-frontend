- @page_title = 'Reset password | Admin'

%main#content.container{role:'main'}
  .grid-row
    .column-full
      = render partial: "layouts/errors", locals: { object: @user } if @user.errors.any?
      %h1.heading-large Reset password
      = form_for @user, url: admin_password_reset_path(params[:id]) do |f|
        = f.password_field :password
        = f.password_field :password_confirmation
        .form-group
          = button_tag 'Continue', class: 'button'

        = link_to 'Forgotten password', new_admin_password_reset_path
