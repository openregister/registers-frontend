- @page_title = 'Home'
= content_for :body_classes, 'home-page'

%main{role:'main'}
  .masthead
    %nav.breadcrumbs.breadcrumbs--inverse{"aria-label" => "Breadcrumb"}
      %ol{data: {"click-events" => "", "click-category" => "Header", "click-action" => "Breadcrumb Clicked"}}
        %li.breadcrumbs__item
          = link_to 'Components', 'https://www.gov.uk/service-toolkit#components'
        %li.breadcrumbs__item.breadcrumbs__item--active
          = link_to 'GOV.UK Registers', '#content', "aria-current" => "page"

    .hero.hero--breaded
      .hero__content
        .hero__body
          %h1.hero__title Direct access to up-to-date government data
          .hero__inline-image
            = image_tag "registers-top-image.png", role: "presentation"
          %p.hero__description
            GOV.UK Registers provides a secure API that is easy to integrate with so you can get the most up-to-date data from across government.

          = link_to 'See how to get started', registers_path, class: 'button hero-button', role: 'button'
        .hero__aside-image
          = image_tag "registers-top-image.png", role: "presentation"

  .container#content
    %section.content-section
      .grid-row
        .column-one-half
          %h2.heading-medium.content-section__title Why your service should use registers
          %p GOV.UK Registers helps you to:
          %ul.list.list-bullet
            %li build and maintain your service with accurate data that is updated for you
            %li reduce the time and cost of sourcing data from across government
            %li easily share data with other government departments
        .column-one-half
          = image_tag 'get-data.png'

    %section.content-section.content-section--with-top-border
      .grid-row
        .column-one-half
          %h2.heading-medium.content-section__title How registers work
          %p Registers are live lists of information that are managed and approved by government.
          %p Each register:
          %ul.list.list-bullet
            %li is the most reliable list of its kind
            %li can be accessed and used freely by anyone
            %li provides data in different formats including JSON and CSV
        .column-one-half
          = image_tag 'country-register.png'

    %section.content-section.content-section--with-top-border
      .grid-row
        .column-one-half
          %h2.heading-medium.content-section__title Get started
          %p Use our quick start guide to get set up and access registers data.
          %p= link_to 'See how to get started', using_registers_path

        .column-one-half

    %section.content-section.content-section--with-top-border
      .grid-row
        .column-full
          %h2.heading-medium.content-section__title Registers in numbers
      .grid-row
        .column-one-third
          .data
            = link_to registers_path do
              %span.data-item.bold-xxlarge= @ready_registers.count
              %span.data-item.bold-xsmall registers you can use
        .column-one-third
          .data
            = link_to registers_in_progress_path do
              %span.data-item.bold-xxlarge= @upcoming_registers.count
              %span.data-item.bold-xsmall upcoming registers
        .column-one-third
          .data
            = link_to services_using_registers_path do
              %span.data-item.bold-xxlarge 13
              %span.data-item.bold-xsmall government services using registers

